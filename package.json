{
  "name": "wastewise",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "tsx app/lib/db/seeds/run.ts"
  },
  "scripts": {
    "dev": "URL_TYPE=accelerate op run --env-file='./.env' -- next dev",
    "build": "npx prisma generate --no-engine && next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier --write */**/*.{js,jsx,json,ts,tsx,scss,css,md}",
    "prepare": "husky",
    "migrate:seed": "URL_TYPE=accelerate op run --env-file='./.env' -- npx prisma db seed",
    "migrate:dev": "URL_TYPE=default op run --env-file='./.env' -- npx prisma migrate dev",
    "sentry:inject": "./sentry-inject.sh",
    "test": "vitest",
    "test:int": "./scripts/run-integration.sh",
    "test:int:ui": "./scripts/run-integration.sh --ui"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@internationalized/date": "^3.5.6",
    "@nextui-org/react": "^2.4.8",
    "@react-aria/i18n": "^3.12.3",
    "@sentry/nextjs": "^8.35.0",
    "bcrypt": "^5.1.1",
    "blakejs": "^1.2.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.9",
    "next": "^15.0.0",
    "next-auth": "5.0.0-beta.25",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.13.0",
    "sonner": "^1.5.0",
    "tsx": "^4.19.1",
    "vite-tsconfig-paths": "^5.0.1",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.7.7",
    "@types/nodemailer": "^6.4.16",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^8",
    "eslint-config-next": "15.0.0-rc.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "vitest-mock-extended": "^2.0.2"
  }
}
